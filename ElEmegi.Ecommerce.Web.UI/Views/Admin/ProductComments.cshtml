@model IEnumerable<ElEmegi.Ecommerce.Model.Entity.ProductComments>

@{
    ViewBag.Title = "UnapprovedComment";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Onay Bekleyen Ürün Yorumları</h2>
@{
    if (Model.Count() > 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product.EncryptedString)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsApproved)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.EncryptedString)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsApproved)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "EditProductComments", new { id = item.ID }) |
                        @Html.ActionLink("Sil", "DeleteProductComment", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong>Yorum Yok !</strong> Onaylanmamış ürün yorumunuz bulunmamaktadır.
        </div>
    }
}

