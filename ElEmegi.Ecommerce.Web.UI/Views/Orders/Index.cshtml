@using ElEmegi.Ecommerce.Model.Entity
@model IEnumerable<ElEmegi.Ecommerce.Model.Entity.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<main class="mt-5 pt-4">

    <div class="container dark-grey-text mt-5">
        <h2>Siparişler</h2>
        <hr />
        @{
            if (@Model.Count() < 1)
            {
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <span><strong>Hata: </strong> Sipariş bulunamadı. <a class="alert-link">İşlem yapmanız gereken sipariş yoktur.</a>.</span>
                </div>
            }
            else
            {
                <div class="row">
                    <section class="text-center mb-4">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Order Number</th>
                                <th>Order Date</th>
                                <th>Order Status</th>
                                <th>Order Count</th>
                                <th>Total</th>
                                <td></td>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.OrderNumber</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.OrderState</td>
                                    <td>@item.OrderLines.Count</td>
                                    <td>@item.Total</td>
                                    <td>
                                        @Html.ActionLink("Detay", "Details", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" })
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </section>
                </div>
            }
        }
     
    </div>

</main>
