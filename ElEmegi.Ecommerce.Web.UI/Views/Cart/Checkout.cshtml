@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ElEmegi.Ecommerce.Web.UI.Models
@model ElEmegi.Ecommerce.Web.UI.Models.ShippingDetails
<div class="container wow fadeIn">

    <h2 class="my-5 h2 text-center">Sipariş Bilgileriniz</h2>

    <div class="row">

        <div class="col-md-8 mb-4">
            <p>Lütfen sipariş bilgilerinizi doldurun.</p>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <form>

                    @if (@Session["ad"] != null && @Session["soyad"] != null)
                    {
                               
                        <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Adınız </label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(Model => Model.Name, new { @Value=@Session["ad"] ,@class="form-control", @readonly = "readonly" })                                    </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Soyadınız </label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control",@Value=@Session["soyad"], @readonly = "readonly" })
                            </div>
                        </div>
                                
                    }
                    else
                    {
                        <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Adınız </label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Soyadınız </label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                            </div>
                        </div>
                    }


                     
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Adres Başlığı</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Adres Email</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Adres</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Şehir</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Semt</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Mahalle</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Posta Kodu</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                        </div>
                        <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Sözleşme</button>
                        <input type="checkbox" name="check" value="1" placeholder="" required="true" style="margin-left: 5px;" /> okudum,anladım ve kabul ediyorum.
                    </div>
                    
                  

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-check-square"></i> Sipariş Ver !</button>
                        </div>
                    </div>
                    
                   
                
            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Modal Header</h4>
                        </div>
                        <div class="modal-body">
                            <p>This is a large modal.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                        </div>
                    </div>
                </div>
            </div>
                    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
                    
                    

                 
                   
                </form>
            }
        </div>
        @if (@ViewBag.ErrorMessage != null)
        {
            @ViewBag.ErrorMessage
        }

        <div class="col-md-4 mb-4">
    @{
        <div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
            <h5 class="m-text20 p-b-24">
               Sepet Özeti
            </h5>

      
            <!--  -->
            <div class="flex-w flex-sb bo10 p-t-15 p-b-20">
                <span class="s-text18 w-size19 w-full-sm">
                    Ürünler:
                </span>

                <div class="w-size20 w-full-sm">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Ürün Adı</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                        </tr>
                        </thead>
                       
                        @{
                            foreach (var item_Cart in ViewBag.cart.CartLines)
                            {
                                <tbody>
                                <tr>
                                    <td>@item_Cart.Product.Name</td>
                                    <td>@item_Cart.Quantity</td>
                                    <td>@item_Cart.Product.Price ₺</td> 
                                </tr>
                           
                                </tbody>
                            }
                        }

                    
                    </table>
                </div>
            </div>

            <!--  -->
            <div class="flex-w flex-sb-m p-t-26 p-b-30">
                <span class="m-text22 w-size19 w-full-sm">
                    Toplam :
                </span>

                <span class="m-text21 w-size20 w-full-sm">
                    @ViewBag.cart.Total().ToString("c")<strong> ₺</strong> 
                </span>
                @{
                    if (Session["coupon"] !=null)
                    {
                        <span class="s-text18 w-size19 w-full-sm">
                            İndirimli Fiyat:
                        </span>
                        <span class="m-text21 w-size20 w-full-sm">
                            @ViewBag.cart.CouponDiscount("").ToString("c")
                        </span>
                    }
                }
            </div>
        </div>
     
           }
           
    <div class="flex-w flex-sb bo10 p-t-15 p-b-20">
        <span class="s-text18 w-size19 w-full-sm">
            Bilgilendirme :
        </span>

        <div class="w-size20 w-full-sm">
            <p class="s-text8 p-b-23">
               Ürünleriniz sipariş verildikten sonra kontrollerin ardından kargoya verilecektir.Bizi tercih ettiğiniz için teşekkür ederiz.
            </p>
        </div>
    </div>
        </div>

    </div>

</div>

