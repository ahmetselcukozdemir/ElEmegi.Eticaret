@{
    foreach (var item in ViewBag.blog)
    {<div class="col-sm-10 col-md-4 p-b-30 m-l-r-auto">
        <!-- Block3 -->
        <div class="block3">
            <a href="blog-detail.html" class="block3-img dis-block hov-img-zoom">
                @if (@item.Image == null)
                {
                     <img src="~/Content/images/blog-01.jpg"  alt="IMG-BLOG">
                }
                else
                {
                    <img src="@item.Image" alt="IMG-BLOG">
                }

            </a>

            <div class="block3-txt p-t-14">
                <h4 class="p-b-7">
                    <a href="/Home/BlogDetails/@item.ID" class="m-text11">
                        @item.Title
                    </a>
                </h4>

                <span class="s-text6">By</span> <span class="s-text7">Admin</span>
                <span class="s-text6">on</span> <span class="s-text7">@item.CreateDate</span>

                <p class="s-text8 p-t-16">
                    @item.Description
                </p>
            </div>

        </div></div>

        }
        }


