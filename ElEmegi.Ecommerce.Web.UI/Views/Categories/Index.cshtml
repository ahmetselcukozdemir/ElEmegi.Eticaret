@model IEnumerable<ElEmegi.Ecommerce.Model.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Yeni Kategori", "Create","",new{@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.ID },new{@class="btn btn-primary"}) |
            @Html.ActionLink("Detay", "Details", new { id=item.ID },new{@class="btn btn-default"}) |
            @Html.ActionLink("Sil", "Delete", new { id=item.ID },new{@class="btn btn-danger"})
        </td>
    </tr>
}

</table>
