@model IEnumerable<ElEmegi.Eticaret.Core.Model.Entity.Order>

@{
    ViewBag.Title = "Index";
}
<h3><strong>Siparişler</strong></h3>
<hr/>
<div class="container-fluid" style="min-height: 420px;">
<table class="table table-bordered ">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Status.Name)*@
            Sipariş Durumu
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.User.Name)*@
            Siparişi Veren Kişi
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.User.Name)*@
            E-maili
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.User.Name)*@
            Telefonu
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.UserAddress.Title)*@
            Adres Başlığı
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.TotalPrice)*@
            Toplam Ücret
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.CreateDate)*@
            Sipariş Tarihi
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
            @Html.DisplayFor(modelItem => item.User.LastName)
        </td>
        <td>   @Html.DisplayFor(modelItem => item.User.Email) </td>
        <td>   @Html.DisplayFor(modelItem => item.User.Telephone)</td>

        <td>
            @Html.DisplayFor(modelItem => item.UserAddress.Title)
        </td>
        <td>
            <strong>@Html.DisplayFor(modelItem => item.TotalPrice)</strong>   
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdateDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
</div>